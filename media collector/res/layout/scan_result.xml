<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/radialbackground" 
    android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent" 
                    android:id="@+id/relativeLayout1" 
                    android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView1" 
                   android:layout_width="wrap_content" 
                   android:layout_height="wrap_content" 
                   android:src="@drawable/logo_bird" 
                   android:layout_alignParentRight="true"></ImageView>
        <ImageView android:id="@+id/imageView2" 
                   android:layout_width="wrap_content" 
                   android:layout_height="wrap_content" 
                   android:src="@drawable/logo_schrift_middle"
                   android:layout_marginTop="55sp"
                   android:layout_marginLeft="20sp"></ImageView>
        <View android:id="@+id/spacer1"
              android:layout_width="match_parent"
              android:layout_height="0.1dip"
              android:layout_marginLeft="10sp"
              android:layout_marginRight="35sp"
              android:background="#44FFFFFF"
              android:layout_marginTop="80sp" />
    </RelativeLayout>
    <LinearLayout android:id="@+id/linearLayout1" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:orientation="vertical" 
        android:layout_marginLeft="20sp">
        <ImageView android:id="@+id/cover" 
            android:layout_width="225sp"
            android:layout_height="225sp"></ImageView>
        <TextView
            android:id="@+id/txt_barcode"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            ></TextView>
        <RelativeLayout android:id="@+id/relativeLayout2" 
	        android:layout_height="match_parent" 
	        android:layout_width="match_parent"
	        android:layout_marginRight="20sp">
	        <TextView android:text="" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:textSize="14sp"
	            android:layout_marginTop="20sp"
	            android:layout_alignParentLeft="true"
	            android:id="@+id/artist"></TextView>
	        <TextView android:text="" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:textSize="14sp"
	            android:layout_marginTop="20sp"
	            android:layout_alignParentRight="true"
	            android:id="@+id/year"></TextView>
        </RelativeLayout>    
        <TextView android:text="" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:id="@+id/release"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="18sp"></TextView>
    </LinearLayout>
    <RelativeLayout android:id="@+id/relativeLayout3" 
        android:layout_height="match_parent" 
        android:layout_width="match_parent">
        <LinearLayout android:id="@+id/back_to_start"
        	android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:clickable="true">
	        <TextView android:text="@string/SCAN_back" 
	            android:id="@+id/back_to_start_text" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:textSize="12sp"
	            android:padding="20sp"
	            android:layout_alignParentBottom="true"></TextView>
            </LinearLayout>
        <LinearLayout android:id="@+id/add_to_collection"
        	android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true">
	        <TextView android:id="@+id/add_to_collection_text" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:textSize="14sp"
	            android:padding="20sp"
	            android:layout_alignParentBottom="true" 
	            android:text="@string/SCAN_add"></TextView>
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>
